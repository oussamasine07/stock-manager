<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app  xmlns="http://jakarta.ee/xml/ns/jakartaee" version="5.0">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>WelcomeServlet</servlet-name>
    <servlet-class>com.product.controllers.WelcomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WelcomeServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NewProductServlet</servlet-name>
    <servlet-class>com.product.controllers.NewProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewProductServlet</servlet-name>
    <url-pattern>/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateProductServlet</servlet-name>
    <servlet-class>com.product.controllers.UpdateProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateProductServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteProductServlet</servlet-name>
    <servlet-class>com.product.controllers.DeleteProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteProductServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>

</web-app>
